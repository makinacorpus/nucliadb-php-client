{
    "name": "makina-corpus/nucliadb-php-client",
    "description": "PHP client for NucliaDB API",
    "type": "library",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": { "Nuclia\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "require": {
        "php": ">=8.1",
        "symfony/http-client": "~6.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.10"
    },
    "scripts": {
        "lint": "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix .",
        "test:lint": "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix . -v --dry-run"
    }
}
